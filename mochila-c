#include <stdio.h>

int main() {
    int peso[] = {1, 4, 3, 1};
    int valor[] = {1500, 3000, 2000, 2000};
    int n = 4;
    int capacidad = 4;
    int dp[5][5];

    for (int i = 0; i <= n; i++) {
        for (int w = 0; w <= capacidad; w++) {
            if (i == 0 || w == 0) {
                dp[i][w] = 0;
            } else if (peso[i - 1] <= w) {
                int incluir = valor[i - 1] + dp[i - 1][w - peso[i - 1]];
                int excluir = dp[i - 1][w];
                dp[i][w] = (incluir > excluir) ? incluir : excluir;
            } else {
                dp[i][w] = dp[i - 1][w];
            }
        }
    }

    printf("Valor m√°ximo en la mochila: $%d\n", dp[n][capacidad]);
    return 0;
}
